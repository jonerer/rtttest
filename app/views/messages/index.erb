<%= form_for Message.new, :remote => true do |t| -%>
    <%= t.text_field :text -%>
    <%= t.submit -%>
<%- end -%>

<ul id="messages">
    <%- @messages.reverse.each do |m| -%>
    <li><%= render m -%></li>
    <%- end -%>
</ul>
<script>
    $('#new_message').on('ajax:success', function (event, data) {
        $('#messages').prepend($('<li />').text(data.text))
    })
</script>